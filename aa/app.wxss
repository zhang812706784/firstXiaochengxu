.title-les{
  display: flex;
  justify-content: space-between;
}
.new-title{
  border-left: 5px solid orangered;
  padding-left: 10px;
}
.title-les text,.title-les navigator{
  margin: 14rpx;
}
.main-content{
  margin-bottom: 10px;
}
.search{
  height: 100rpx;
  background-color: green;
  box-sizing: border-box;
  padding: 20rpx;
}
.search-shade{
  border-radius: 30rpx;
  background: white;
  height: 63rpx;
  padding: 6px;
  box-sizing: border-box;
}

.img{
  width: 100%;
  height: 150px;
}
.lesson-container{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}